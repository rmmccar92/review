<main>
  <h2>Edit Peep</h2>
  <form id='edit-peep-form'>
    <input type='hidden' name='id' value='{{peep.id}}' />

    <label for='peep-title'>Title</label>
    <input
      type='text'
      name='title'
      value='{{peep.title}}'
      onchange='changeInput(event);'
    />

    <label for='peep-first'>First</label>
    <input
      type='text'
      name='first'
      value='{{peep.first}}'
      onchange='changeInput(event);'
    />

    <label for='peep-last'>Last</label>
    <input
      type='text'
      name='last'
      value='{{peep.last}}'
      onchange='changeInput(event);'
    />

    <button type='submit'>Update</button>
    <button type='button' id='delete-btn'>Delete</button>
  </form>
</main>

<script src='/js/edit-peep.js'></script>